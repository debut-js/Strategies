    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "./out",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["./out", "./node_modules", "src/trash/*"]
}
